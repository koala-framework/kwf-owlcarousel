<div class="{{ cssClass }}">
    <input type="hidden" value="{{ config|json_encode() }}"/>
    {% block slides %}
    <div class="large owl-carousel">
        {% for item in listItems %}
            {% block large %}
            {{ renderer.component(item.large) }}
            {% endblock %}
        {% endfor %}
    </div>
    {% block betweenSlides %}
    {% endblock %}
    <div class="thumbnail owl-carousel">
        {% for item in listItems %}
            {% block thumbnail %}
            {{ renderer.component(item.thumbnail) }}
            {% endblock %}
        {% endfor %}
    </div>
    {% endblock %}
</div>
